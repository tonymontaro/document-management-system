{
  "root": true,
  "extends": "airbnb-base",
  "env": {
  "node": true,
  "es6": true,
  "mocha": true
  },
   "rules": {
    "max-len":[2, 80, 2],
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "no-unused-vars": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "no-shadow": ["error", { "allow": ["req", "res", "err"] }],
    "valid-jsdoc": ["error", {
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": false,
      "requireReturnDescription": true
    }],
    "require-jsdoc": ["error", {
        "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
        }
    }]
  },
  "plugins": [
      "react",
      "jsx-a11y",
      "import"
  ]
}
